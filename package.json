{
  "name": "website-similarity",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/db"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "seed": "ts-node --esm scripts/seed.ts",
    "scrape": "ts-node --esm scripts/scrape.ts",
    "clear-screenshots": "ts-node --esm scripts/clear-screenshots.ts",
    "test-db": "ts-node --esm scripts/test-db.ts"
  },
  "devDependencies": {
    "typescript": "^5",
    "dotenv": "^16.5.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.8",
    "@types/node": "^22.15.29",
    "openai": "^5.0.1",
    "p-limit": "^6.2.0",
    "p-retry": "^6.2.1",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
