{
  "name": "website-similarity",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/db"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "setup": "cross-env python -m venv .venv && cross-env .venv/Scripts/python -m pip install -r requirements.txt",
    "setup:mac": "cross-env python3 -m venv .venv && cross-env .venv/bin/python -m pip install -r requirements.txt",
    "seed": "cross-env .venv/Scripts/python scripts/seed.py",
    "seed:mac": "cross-env .venv/bin/python scripts/seed.py",
    "scrape": "cross-env .venv/Scripts/python scripts/scrape.py",
    "scrape:mac": "cross-env .venv/bin/python scripts/scrape.py"
  },
  "devDependencies": {
    "typescript": "^5",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.8",
    "@types/node": "^22.15.29",
    "dotenv": "^16.5.0",
    "openai": "^5.0.1",
    "p-limit": "^6.2.0",
    "p-retry": "^6.2.1",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2"
  }
}
